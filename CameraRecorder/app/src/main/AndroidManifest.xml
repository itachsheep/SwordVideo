<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tao.camera">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mxiao"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FFmpegEnDe">
        <activity android:name="com.tao.camera.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sample.GLSampleActivity"/>
        <activity android:name=".sample.BitmapGenMp4Activity"/>
        <activity android:name=".sample.CameraPreviewActivity"/>
        <activity android:name=".sample.DrawBitmapActivity"/>
        <activity android:name=".sample.ShareTextureIdActivity"/>
        <activity android:name=".sample.VideoRecordingActivity"/>
    </application>

</manifest>
<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/len_4" />
            <gradient
                android:endColor="@color/color_transparent"
                android:startColor="@color/color_transparent" />
        </shape>
    </item>

    <!-- 设置进度条颜色 -->
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="start">
            <shape>
                <corners android:radius="@dimen/len_4" />
                <gradient
                    android:endColor="@color/style_green2_24C587"
                    android:startColor="@color/style_green2_24C587" />
            </shape>
        </clip>
    </item>

</layer-list>
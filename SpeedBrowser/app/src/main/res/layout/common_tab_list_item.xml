<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/len_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.tw.speedbrowser.base.widget.SleTextButton
        android:id="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_30"
        android:layout_gravity="center"
        android:textColor="@color/text_1_1A1A1A"
        android:gravity="center"
        android:textSize="@dimen/font_15"
        android:orientation="vertical"
        tools:text="Spot" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        android:layout_marginHorizontal="@dimen/len_1"
        app:layout_constraintStart_toStartOf="@id/tv_title">

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_2"
            android:background="@color/text_1_1A1A1A" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

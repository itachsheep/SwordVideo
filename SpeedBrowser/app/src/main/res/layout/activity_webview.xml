<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.tw.speedbrowser.base.widget.SleConstraintLayout
        android:id="@+id/mScTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:layout_marginTop="@dimen/len_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tw.speedbrowser.base.widget.SleConstraintLayout
            android:id="@+id/sl_et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/len_15"
            android:layout_marginEnd="@dimen/len_2"
            android:layout_weight="1"
            android:paddingStart="@dimen/len_0"
            app:layout_constraintEnd_toStartOf="@+id/tvSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginEnd="@dimen/len_15"
            app:sle_cornersRadius="@dimen/len_6"
            app:sle_normalStrokeColor="@color/line_2_D9D9D9"
            app:sle_selectedStrokeColor="@color/text_1_1A1A1A"
            app:sle_strokeWidth="@dimen/len_1">

            <LinearLayout
                android:id="@+id/mLLSearchNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/len_15"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/mIvSearchNet"
                    android:layout_width="@dimen/len_18"
                    android:layout_height="@dimen/len_18"
                    android:src="@drawable/baidu_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/mIvSearchNetArrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_gravity="bottom"
                    android:id="@+id/mIvSearchNetArrow"
                    android:layout_width="@dimen/len_8"
                    android:layout_height="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_4"
                    android:src="@mipmap/ic_selected" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/len_10"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/enter_internet_url"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/text_1_1A1A1A"
                android:textColorHint="@color/text_3_999999"
                android:textCursorDrawable="@drawable/et_cursor_drawable"
                android:textSize="@dimen/font_15"
                app:layout_constraintEnd_toStartOf="@+id/iv_clear_key"
                app:layout_constraintStart_toEndOf="@id/mLLSearchNet"
                tools:hint="@string/enter_internet_url" />

            <ImageView
                android:id="@+id/iv_clear_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_10"
                android:padding="@dimen/len_5"
                android:src="@mipmap/ic_search_clear"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </com.tw.speedbrowser.base.widget.SleConstraintLayout>

        <ImageView
            android:id="@+id/tvSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/len_10"
            android:src="@drawable/svg_search"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sle_cornersRadius="@dimen/len_4"/>

        <!--<com.tw.speedbrowser.base.widget.SleTextButton
            android:id="@+id/tvSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/len_10"
            android:text="@string/search"
            android:textColor="@color/text_1_1A1A1A"
            android:textSize="@dimen/font_15"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sle_cornersRadius="@dimen/len_4"
            app:sle_textStyle="regular" />-->

    </com.tw.speedbrowser.base.widget.SleConstraintLayout>

    <ProgressBar
        android:id="@+id/mProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginStart="@dimen/len_15"
        android:layout_marginTop="@dimen/len_3"
        android:layout_marginEnd="@dimen/len_10"
        android:background="@color/style_white_FFFFFF"
        android:max="100"
        android:progressDrawable="@drawable/spot_kline_orderbook_buy_bar_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mScTop"
        android:visibility="gone"/>

    <WebView
        android:id="@+id/mWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/len_4"
        android:paddingTop="@dimen/len_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mProgress"
        app:layout_constraintVertical_weight="1" />

    <com.tw.speedbrowser.base.widget.SleConstraintLayout
        android:id="@+id/mllBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:paddingHorizontal="@dimen/len_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:sle_normalBackgroundColor="@color/style_white_FFFFFF">


       <LinearLayout
           android:gravity="center_horizontal"
           android:id="@+id/mLLBack"
           android:layout_width="@dimen/len_40"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <ImageView
               android:id="@+id/mIvBack"
               android:layout_width="@dimen/len_8"
               android:layout_height="@dimen/len_30"
               app:layout_constraintStart_toStartOf="parent"
               android:src="@drawable/svg_arrow_right_black"
               android:rotation="180"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

       </LinearLayout>



        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/mLLGoForward"
            android:layout_width="@dimen/len_50"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/mLLBack"
            app:layout_constraintEnd_toStartOf="@id/mIvHome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mIvGoForward"
                android:layout_width="@dimen/len_8"
                android:layout_height="@dimen/len_30"
                app:layout_constraintStart_toEndOf="@id/mLLBack"
                app:layout_constraintEnd_toStartOf="@id/mIvHome"
                android:src="@drawable/svg_arrow_right_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <ImageView
            android:id="@+id/mIvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/len_10"
            android:src="@drawable/svg_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/mIvFavor"
            android:paddingHorizontal="@dimen/len_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_favor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mIvHome"
            app:layout_constraintEnd_toStartOf="@id/mIvSetting" />


        <ImageView
            android:id="@+id/mIvSetting"
            android:paddingHorizontal="@dimen/len_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </com.tw.speedbrowser.base.widget.SleConstraintLayout>

    <com.tw.speedbrowser.base.widget.SleConstraintLayout
        android:id="@+id/mEditPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mScTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:sle_normalBackgroundColor="@color/style_white_FFFFFF"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tw.speedbrowser.base.widget.SleConstraintLayout
            android:layout_marginTop="@dimen/len_10"
            android:id="@+id/mEditCur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/len_5"
            android:layout_marginHorizontal="@dimen/len_15"
            android:paddingVertical="@dimen/len_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sle_normalBackgroundColor="@color/background_3_E3F1FF"
            app:sle_cornersRadius="@dimen/len_6"
            app:layout_constraintEnd_toEndOf="parent">

            <com.tw.speedbrowser.base.widget.SleTextButton
                android:id="@+id/mNetTitle"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mIvCopy"
                android:textColor="@color/text_1_1A1A1A"
                tools:text="百度一下，你就知道"/>

            <com.tw.speedbrowser.base.widget.SleTextButton
                android:id="@+id/mNetUrl"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mNetTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mIvCopy"
                tools:text="http://www.baidu.com"
                android:textColor="@color/style_blue_2A54FF"
                android:singleLine="true"
                android:ellipsize="end"/>

            <ImageView
                android:paddingHorizontal="@dimen/len_10"
                android:id="@+id/mIvCopy"
                android:src="@mipmap/ic_new_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/mNetUrl"
                app:layout_constraintEnd_toStartOf="@id/mIvEdit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:paddingHorizontal="@dimen/len_10"
                android:id="@+id/mIvEdit"
                android:src="@mipmap/icon_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/mIvCopy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </com.tw.speedbrowser.base.widget.SleConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRvTab"
            android:layout_marginTop="@dimen/len_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/len_15"
            app:layout_constraintTop_toBottomOf="@+id/mEditCur"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:itemCount="1" />

        <ImageView
            android:paddingEnd="@dimen/len_25"
            android:paddingStart="@dimen/len_10"
            android:id="@+id/mIvDeleteHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mRvTab"
            app:layout_constraintBottom_toBottomOf="@id/mRvTab"
            android:src="@drawable/svg_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--<com.tw.speedbrowser.base.widget.RtlViewPager-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewPager"
            android:layout_marginHorizontal="@dimen/len_15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/len_10"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/mRvTab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </com.tw.speedbrowser.base.widget.SleConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>